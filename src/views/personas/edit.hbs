<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/registropersonas/edit/{{personas.id_persona}}" method="POST">
                        <div class="form-group m-3">
                            <input type="text" value="{{personas.nombres_persona}}" class="form-control" name="nombres_persona" placeholder="Nombre(s)" autofocus>
                        </div>
                        <div class="form-group m-3">
                            <input type="text" value="{{personas.a_paterno}}" class="form-control" name="a_paterno" placeholder="Apellido Paterno">
                        </div>
                        <div class="form-group m-3">
                            <input type="text" value="{{personas.a_materno}}" class="form-control" name="a_materno" placeholder="Apellido Materno">
                        </div>
                        <div class="form-group m-3">
                            <input type="text" value="{{personas.calle}}" class="form-control" name="calle" placeholder="Calle">
                        </div>
                        <div class="form-group m-3">
                            <input type="text" value="{{personas.numero_casa}}" class="form-control" name="numero_casa" placeholder="Número Casa">
                        </div>
                        <div class="form-group m-3">
                            <input type="text" value="{{personas.colonia}}" class="form-control" name="colonia" placeholder="Colonia">
                        </div>
                        <div class="form-group m-3">
                            <input type="tel" value="{{personas.num_tel}}" class="form-control" name="num_tel" placeholder="Teléfono">
                        </div>
                        <div class="form-control">
                            <button class="btn btn-outline-success btn-lg btn-block">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>